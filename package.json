{
  "name": "skuid-sfdx",
  "description": "SFDX plugin for managing Skuid metadata",
  "version": "0.4.0",
  "author": "Skuid",
  "bugs": "https://github.com/skuid/skuid-sfdx/issues",
  "dependencies": {
    "@oclif/core": "^2.15.0",
    "@salesforce/core": "^3.32.1",
    "@salesforce/kit": "^1.7.0",
    "@salesforce/sf-plugins-core": "^3.1.28",
    "@salesforce/ts-types": "^1.7.1",
    "@types/fs-extra": "^9.0.13",
    "json-stable-stringify": "^1.0.1",
    "node-glob": "^1.2.0",
    "tslib": "^1",
    "vkbeautify": "^0.99.3"
  },
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^3.1.3",
    "@salesforce/cli-plugins-testkit": "^3.2.3",
    "@salesforce/dev-config": "1.4.1",
    "@salesforce/dev-scripts": "^10.2.11",
    "@salesforce/plugin-command-reference": "^2.2.8",
    "@salesforce/prettier-config": "^0.0.2",
    "@salesforce/ts-sinon": "^1.4.1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "globby": "^14.0.2",
    "mocha": "^5.2.0",
    "nyc": "^17.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^5"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/skuid/skuid-sfdx",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "topics": {
      "skuid:page:pull": {
        "description": "Retrieves Skuid Pages from a target org into a filesystem directory."
      },
      "skuid:page:push": {
        "description": "Push Skuid Pages from a directory to Skuid."
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "skuid/skuid-sfdx",
  "scripts": {
    "lint-fix": "tslint -p test --fix -t stylish",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest",
    "test": "nyc --reporter=lcov --reporter=text --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
